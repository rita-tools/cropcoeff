    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/release/cropcoef.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/example/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                
                {
                    "description": "Set max memory size",
                    "text": "set max-value-size 200000000",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build" 

        }
    ],
    
}
